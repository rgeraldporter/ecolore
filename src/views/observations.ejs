<!DOCTYPE html>
<html lang="en">

        <% include head %>

<body>
        <% include menu %>
        <div class="content-wrapper">
            <div class="header">
            </div>
            <div class="content pure-g">
            <% include project-menu %>
            <% const isAdmin = project.memberRole === 'administrator' || project.memberRole === 'owner'; %>
            <% const isContrib = project.memberRole === 'administrator' || project.memberRole === 'owner'
            || project.memberRole === 'contributor'; %>

            <main class="pure-u-1 pure-u-md-5-6">
                    <h3 class="content-subhead">
                        <a href='/project/<%= project.slug %>/cycles'><%= locals.t('Cycles', project) %></a> &raquo;
                        <a href='/project/<%= project.slug %>/cycle/<%= cycle.id %>/surveys'><%= cycle.title %></a>  &raquo;
                        <a href='/project/<%= project.slug %>/cycle/<%= cycle.id %>/survey/<%= surveyId %>'><%= locals.t('Survey', project) %> #<%= surveyId %></a> &raquo;
                        <%= locals.t('Observations', project) %>
                    </h3>

                    <% if(isContrib) { %>
                        <a href="/project/<%= project.slug %>/cycle/<%= cycle.id %>/survey/<%= surveyId %>/observation/new">Add <%= locals.t('observation', project) %></a><br>
                    <% } %>

                    <% include datatable %>

            </table>
            </main>
        </div>
        <% include footer %>
    </div>
</body>

</html>